<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.ricknout.mdctheming">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".theming.ThemingActivity"
                android:label="@string/title_theming" />

        <activity
                android:name=".bottomappbar.BottomAppBarActivity"
                android:label="@string/title_bottom_app_bar"
                android:theme="@style/AppTheme.BottomAppBar.Themed" />

        <activity
                android:name=".bottomnavigation.BottomNavigationActivity"
                android:label="@string/title_bottom_navigation"
                android:theme="@style/AppTheme.BottomNavigation.Themed" />

        <activity
                android:name=".bottomsheet.BottomSheetActivity"
                android:label="@string/title_bottom_sheet"
                android:theme="@style/AppTheme.BottomSheet.Themed" />

        <activity
                android:name=".button.ButtonActivity"
                android:label="@string/title_button"
                android:theme="@style/AppTheme.Button.Themed" />

        <activity
                android:name=".chip.ChipActivity"
                android:label="@string/title_chip"
                android:theme="@style/AppTheme.Chip.Themed" />

        <activity
                android:name=".card.CardActivity"
                android:label="@string/title_card"
                android:theme="@style/AppTheme.Card.Themed" />

        <activity
                android:name=".dialog.DialogActivity"
                android:label="@string/title_dialog"
                android:theme="@style/AppTheme.Dialog.Themed" />

        <activity
                android:name=".selectioncontrol.SelectionControlActivity"
                android:label="@string/title_selection_control"
                android:theme="@style/AppTheme.SelectionControl.Themed" />

        <meta-data android:name="preloaded_fonts" android:resource="@array/preloaded_fonts"/>

    </application>

</manifest>
